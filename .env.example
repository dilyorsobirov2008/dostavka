# Telegram Bot sozlamalari
# @BotFather dan yangi bot yarating va tokenni oling
BOT_TOKEN=your_bot_token_here

# Admin chat ID - buyurtmalar qayerga kelishi kerak
# @userinfobot ga /start yuboring va o'z chat ID ingizni oling
ADMIN_CHAT_ID=your_chat_id_here

# Web App URL (frontend URL)
# Development: http://localhost:3000
# Production: https://your-frontend-url.vercel.app
WEB_APP_URL=http://localhost:3000

# Backend URL (production da o'zgartiring)
BACKEND_URL=http://localhost:5000

# Flask environment (development yoki production)
FLASK_ENV=development

# PORT (Render avtomatik beradi, lekin lokal test uchun)
PORT=5000
